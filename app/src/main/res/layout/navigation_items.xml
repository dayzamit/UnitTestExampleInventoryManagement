<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_7x"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_option_icon"
        android:layout_width="@dimen/dimens_3x"
        android:layout_height="@dimen/dimens_3x"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimens_2x" />

    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimens_2x"
        android:textSize="16sp" />

</LinearLayout>