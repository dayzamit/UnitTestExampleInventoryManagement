<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/iv_add_to_cart"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/s7" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_add_to_cart"
        android:maxWidth="200dp"
        android:minWidth="200dp"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_quantity"
            android:layout_marginLeft="16dp"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_name"
            android:layout_below="@+id/tv_item_name"
            android:inputType="number"
            android:maxEms="3" />

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:id="@+id/iv_done"
        android:paddingBottom="15dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp"
        android:src="@drawable/ic_done_white" />

</LinearLayout><!-- From: file:/Users/ManasShrestha/Desktop/leapfrog-android/UnitTestExampleInventoryManagement/app/src/main/res/layout/add_to_cart_dialog.xml -->